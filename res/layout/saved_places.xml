<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signUpTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved Places"
                android:textColor="@color/primary"
                android:layout_gravity="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- First Restaurant Widget -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <!-- Widget Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="227dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <!-- Restaurant Image -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="142dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/food3t4app" />

                    <!-- Restaurant Name and Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:text="P.S. Cafe"
                            android:textColor="#282828"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/location_on" />
                    </LinearLayout>

                    <!-- Restaurant Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Western Fusion Cafe at Raffles City"
                        android:textColor="#777777"
                        android:textSize="14sp" />

                    <!-- Distance from MRT Station -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="6 mins walk from City Hall MRT"
                        android:textColor="#777777"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second Restaurant Widget -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <!-- Widget Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="227dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <!-- Restaurant Image -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="142dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/food3t4app" />

                    <!-- Restaurant Name and Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:text="P.S. Cafe"
                            android:textColor="#282828"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/location_on" />
                    </LinearLayout>

                    <!-- Restaurant Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Western Fusion Cafe at Raffles City"
                        android:textColor="#777777"
                        android:textSize="14sp" />

                    <!-- Distance from MRT Station -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="6 mins walk from City Hall MRT"
                        android:textColor="#777777"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Third Restaurant Widget -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <!-- Widget Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="227dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <!-- Restaurant Image -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="142dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/food3t4app" />

                    <!-- Restaurant Name and Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:text="P.S. Cafe"
                            android:textColor="#282828"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/location_on" />
                    </LinearLayout>

                    <!-- Restaurant Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Western Fusion Cafe at Raffles City"
                        android:textColor="#777777"
                        android:textSize="14sp" />

                    <!-- Distance from MRT Station -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="6 mins walk from City Hall MRT"
                        android:textColor="#777777"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
